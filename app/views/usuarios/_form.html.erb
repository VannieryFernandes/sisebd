    <%= form.check_box :visitante, id: :usuario_visitante %>
  </div>

  <div class="field">
    <%= form.label :data_nascimento %>
    <%= form.datetime_select :data_nascimento, id: :usuario_data_nascimento %>
  </div>

  <div class="field">
    <%= form.label :matricula %>
    <%= form.text_field :matricula, id: :usuario_matricula %>
  </div>

  <div class="field">
    <%= form.label :perfil_id %>
    <%= collection_select(:usuario, :perfil_id, @lista_perfils, :id, :nome) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
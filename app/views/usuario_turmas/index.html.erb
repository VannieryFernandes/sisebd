<p id="notice"><%= notice %></p>

<center><h2>Alunos matriculados</h2></center>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Turma</th>
      <th scope="col">Aluno</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuario_turmas.each do |usuario_turma| %>
      <tr>
        <td><%= usuario_turma.turma.nome %></td>
        <td><%= usuario_turma.usuario.nome %></td>
        <td><%= link_to 'Show', usuario_turma %></td>
        <td><%= link_to 'Edit', edit_usuario_turma_path(usuario_turma) %></td>
        <td><%= link_to 'Destroy', usuario_turma, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo aluno da turma', new_usuario_turma_path,:class=>'btn btn-primary btn-custom' %>
